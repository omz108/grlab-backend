generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GemReport {
  id Int     @id @default(autoincrement())
  reportNumber     String @unique
  gemStoneName     String?
  weight           String?
  colour           String?
  shapeCut         String?
  dimension        String?
  opticCharacter   String?
  refractiveIndex  String?
  specificGravity  String?
  remarks          String?
  imageUrl         String?
}


model RudrakshaReport {
  id               Int @id @default(autoincrement())
  reportNumber     String @unique
  weight           String?
  colour           String?
  shape            String?
  dimension        String?
  realFace         String?
  artificialFace   String?
  testCameOut      String?
  remarks          String?
  imageUrl         String?
}


model Admin {
  id String @id @default(cuid())
  name String?
  username String @unique
  password String
}

model User {
  id String @id @default(cuid())
  name String?
  mobileNumber String
  emailId String?
}
